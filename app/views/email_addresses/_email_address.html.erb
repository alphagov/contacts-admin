<p class="vcard">
  <strong class="fn">
    <%= email_address.title %>
  </strong>
  <br>
  <span class="email">
    <%= mail_to email_address.email %>
  </span>

  <% if email_address.description.present? %>
    <br>
    <%= simple_format(h(email_address.description), {}, wrapper_tag: 'small') %>
<% end %>
</p>