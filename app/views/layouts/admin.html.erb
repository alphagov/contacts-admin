<!DOCTYPE html>
<html>
<head>
  <title>HMRC Contacts: Admin Interface</title>
  <%= stylesheet_link_tag    "admin", media: "all" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to 'HMRC Contacts', admin_root_path, class: 'brand'  %>

      <ul class="nav">
        <li class="<%= 'active' if params[:controller] == 'admin/offices' %>">
          <%= link_to 'Offices', admin_offices_path  %>
        </li>
        <li class="<%= 'active' if params[:controller] == 'admin/contact_groups' %>">
          <%= link_to 'Contact Groups', admin_contact_groups_path  %>
        </li>
        <li class="<%= 'active' if params[:controller] == 'admin/contacts' %>">
          <%= link_to 'Contacts', admin_contacts_path  %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid">
  <%= render 'flashes' %>

  <%= yield %>
</div>

</body>
</html>
