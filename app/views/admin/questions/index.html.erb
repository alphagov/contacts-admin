<% if questions.any? %>
  <table class='table table-striped table-hover questions-table'>
    <colgroup>
      <col width="*"></col>
      <col width="300"></col>
      <col width="150"></col>
    </colgroup>
    <thead>
      <tr>
        <th>Question</th>
        <th>Office</th>
        <th>
          <%= link_to "New Question", new_admin_question_path, class: 'btn btn-small pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render questions %>
    </tbody>
  </table>
<% else %>
  <div class='alert alert-block alert-info'>
    <h4>No question found</h4>
    <p>
      We have found no questions. <%= link_to "You should add one.", new_admin_question_path %>
    </p>
  </div>
<% end %>
