<div class='page-header'>
  <h2>
    Contacts
    <small>(<%= @contacts.count %>)</small>
  </h2>
 </div>

<% if @contacts.any? %>
  <table class='table table-bordered table-striped table-hover contact-table'>
    <thead>
      <tr>
        <th>Contact</th>
        <th>Department</th>
        <th>Contact Record</th>
        <th>
          <%= link_to "New Contact", new_admin_contact_path, class: 'btn btn-small' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @contacts %>
    </tbody>
  </table>
<% else %>
  <div class='alert alert-block alert-info'>
    <h4>No contact records foudn</h4>
    <p>
      We have found no contacts. Add one?
      <%= link_to "Add one?", new_admin_contact_path, class: 'btn btn-small' %>
    </p>
  </div>
<% end %>
