<% if contacts.any? %>
  <table class='table table-striped table-hover contacts-table'>
    <colgroup>
      <col width="100"></col>
      <col width="*"></col>
      <col width="120"></col>
      <col width="*"></col>
      <col width="*"></col>
      <col width="*"></col>
      <col width="*"></col>
      <col width="*"></col>
      <col width="120"></col>
    </colgroup>
    <thead>
      <tr>
        <th>Department</th>
        <th>Title</th>
        <th>Contact Groups</th>
        <th>Description</th>
        <th>Contact form links</th>
        <th>Email addresses</th>
        <th>Postal addresses</th>
        <th>Phone numbers</th>
        <th>
          <%= link_to "+ Add Contact", new_admin_contact_path, class: 'btn btn-small pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render contacts %>
    </tbody>
  </table>
<% else %>
  <h4>No contacts found</h4>
  <p>
    We have found no contacts. <%= link_to "You should add one.", new_admin_contact_path %>
  </p>
<% end %>
