<div class="row">
  <div class="span12">
    <div class='page-header'>
      <h2>
        Edit Contact

        <small class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            View Contact Methods
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li>
              <%= link_to "Contact Form Links (#{contact.contact_form_links.count})", admin_contact_contact_form_links_path(contact) %>
            </li>
            <li>
              <%= link_to "Email Addresses (#{contact.email_addresses.count})", admin_contact_email_addresses_path(contact) %>
            </li>
            <li>
              <%= link_to "Post Addresses (#{contact.post_addresses.count})", admin_contact_post_addresses_path(contact) %>
            </li>
            <li>
              <%= link_to "Phone Numbers (#{contact.phone_numbers.count})", admin_contact_phone_numbers_path(contact) %>
            </li>
          </ul>
        </small>
      </h2>
    </div>

    <%= render partial: 'form', locals: { contact: contact } %>
  </div>
</div>