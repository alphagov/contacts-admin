<div class="row">
  <div class="span12 first-child">
    <div class='page-header'>
      <h2>
        Edit Email Address for <%= contact %>
        <%= link_to 'Delete', admin_contact_email_address_path(contact, email_address), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small text-red pull-right' %>
      </h2>

      <%= render partial: 'admin/contacts/contact_nav' %>
    </div>

    <%= render partial: 'form', locals: { contact: contact, email_address: email_address } %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h3>Audit log</h3>
    <table class="table table-striped">
      <tr>
        <th>Time</th>
        <th>User</th>
        <th>Action</th>
        <th>Changes</th>
      </tr>
      <%= render partial: 'admin/versions/version', collection: email_address.display_versions, as: :version %>
    </table>
  </div>
</div>
