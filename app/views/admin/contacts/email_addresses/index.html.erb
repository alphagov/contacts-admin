<div class='page-header'>
  <h2>
    Email Addresses for Contacts
  </h2>
 </div>

<% if email_addresses.any? %>
  <table class='table table-striped table-hover email-addresses-table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Email</th>
        <th>
          <%= link_to "+ Add Email Address", new_admin_contact_email_address_path(contact), class: 'btn btn-small pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render email_addresses %>
    </tbody>
  </table>
<% else %>
  <h4>No email address found</h4>
  <p>
    We have found no email addresses. <%= link_to "You should add one.", new_admin_contact_email_address_path(contact) %>
  </p>
<% end %>
