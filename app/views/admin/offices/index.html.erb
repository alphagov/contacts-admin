<% if offices.any? %>
  <table class='table table-striped table-hover office-table'>
    <colgroup>
      <col width="*"></col>
      <col width="120"></col>
      <col width="*"></col>
      <col width="150"></col>
    </colgroup>
    <thead>
      <tr>
        <th>Office</th>
        <th>Department</th>
        <th>Contact</th>
        <th>
          <%= link_to "+ Add Office", new_admin_office_path, class: 'btn btn-small pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render offices %>
    </tbody>
  </table>
<% else %>
  <h4>No office found</h4>
  <p>
    We have found no offices. <%= link_to "You should add one.", new_admin_office_path %>
  </p>
<% end %>
